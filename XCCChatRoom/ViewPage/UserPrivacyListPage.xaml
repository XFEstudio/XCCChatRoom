<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:XCCChatRoom.ViewModel"
             x:Class="XCCChatRoom.ViewPage.UserPrivacyListPage"
             x:DataType="viewmodel:UserPrivacyListPageViewModel"
             Title="用户隐私信息">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label  VerticalOptions="Center"  HorizontalOptions="Center" Text="用户隐私" TextColor="#512BD4" FontSize="32" Padding="50,50"/>
            <Label Text="更新时间:     2023年11月7日" Grid.Row="1" WidthRequest="350"/>
            <Label Text="生效时间:     2023年11月7日" Grid.Row="2" WidthRequest="350"/>
            <Label Margin="10,20" TextColor="#000039" FontSize="20" Text="{Binding ContentText}" WidthRequest="300" Grid.Row="3"/>
        </Grid>
    </ScrollView>
</ContentPage>