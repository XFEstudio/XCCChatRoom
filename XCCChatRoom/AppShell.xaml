<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XCCChatRoom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XCCChatRoom.InnerPage">
    <TabBar>
        <Tab
            Title="聊天室"
            Icon="message">
            <ShellContent
                ContentTemplate="{DataTemplate local:GroupContactPage}"
                Route="GroupContactPage" />
        </Tab>
        <Tab
            Title="AI聊天"
            Icon="ai">
            <ShellContent
                ContentTemplate="{DataTemplate local:AICenterPage}"
                Route="AICenterPage"/>
        </Tab>
        <Tab
            Title="社区"
            Icon="home">
            <ShellContent
                ContentTemplate="{DataTemplate local:CommunityPage}"
                Route="CommunityPage"/>
        </Tab>
        <Tab
            Title="个人"
            Icon="user">
            <ShellContent
                ContentTemplate="{DataTemplate local:UserInfo}"
                Route="UserInfo" />
        </Tab>
    </TabBar>
</Shell>
